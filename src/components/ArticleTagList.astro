---
interface Props {
	tags: string[];
}

const { tags } = Astro.props;
---

<div class="mt-1 flex flex-wrap gap-1 text-xs md:text-sm md:gap-2 md:mt-2">
	{
		tags.map((tag) => (
			<a
				href={`/tags/${tag.toLowerCase().replaceAll(" ", "-")}`}
				class="py-0.5 px-2 rounded-full border border-gray-300 dark:border-gray-700 duration-200 hover:bg-secondary dark:hover:bg-dark-primary hover:text-primary dark:hover:text-dark-secondary hover:border-secondary dark:hover:border-dark-primary focus:bg-secondary dark:focus:bg-dark-primary focus:text-primary dark:focus:text-dark-secondary focus:border-secondary dark:focus:border-dark-secondary focus:outline-none focus:ring focus:ring-secondary dark:focus:ring-dark-primary focus:ring-offset-2"
			>
				{tag}
			</a>
		))
	}
</div>
